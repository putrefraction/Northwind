@page "{id}"
@using Packt.Shared
@model Northwind.Web.Pages.CustomerInfoModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<div class="row">
    <h1 class="display-2">Customers</h1>
    <h2>@Model.Customer.ContactName</h2>
    <div>
        <p><b>Address:</b> @Model.Customer.Address</p>
        <p><b>Contact:</b> @Model.Customer.Phone</p>
        <p><b>City:</b> @Model.Customer.City</p>
    </div>
    <h3>Orders</h3>
    <table class="table">
        <thead class="thead-inverse">
            <tr>
                <th>OrderId</th>
                <th>Order Date</th>
            </tr>
        </thead>
        <tbody>
            @if (@Model.Customer.Orders is not null)
            {
                @foreach (Order o in @Model.Orders)
                {
                    <tr>
                        <td>@o.OrderId</td>
                        <td>@o.OrderDate</td>
                    </tr>
                }
            }
        </tbody> 
    </table>

</div>